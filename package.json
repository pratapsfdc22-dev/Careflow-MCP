{
  "name": "careflow-mcp",
  "version": "1.0.0",
  "description": "Production-ready MCP server for healthcare workflow automation with n8n - HIPAA-compliant patient task management and care coordination",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "careflow-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "HEALTHCARE.md",
    "examples/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "prepare": "npm run build",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "careflow",
    "healthcare",
    "hipaa",
    "patient-management",
    "care-coordination",
    "n8n",
    "workflow",
    "automation",
    "ai",
    "claude",
    "ehr-integration",
    "medical-workflow",
    "typescript"
  ],
  "author": "Pratap Pattanayak <pratap.pattanayak@gmail.com>",
  "license": "MIT",
  "mcp": {
    "protocol_version": "1.0.0",
    "tools": [
      {
        "name": "trigger_workflow",
        "description": "Triggers an n8n workflow by name with JSON payload"
      },
      {
        "name": "list_workflows",
        "description": "Lists all active workflows from n8n REST API"
      },
      {
        "name": "get_workflow_status",
        "description": "Checks execution status of a workflow run"
      },
      {
        "name": "create_patient_task",
        "description": "Sends structured patient task payload to n8n workflow"
      }
    ],
    "categories": [
      "automation",
      "healthcare",
      "workflow"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pratapsfdc22-dev/Careflow-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/pratapsfdc22-dev/Careflow-MCP/issues"
  },
  "homepage": "https://github.com/pratapsfdc22-dev/Careflow-MCP#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
